{% extends 'admin/base.html.twig' %}

{% block body %}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    <p id="userToken">Your token: {{ user.token }}</p>

    {{ form_start(form) }}
    {{ form_widget(form) }}
    {{ form_rest(form) }}
    <button type="submit" class="btn btn-primary">Submit</button>
    {{ form_end(form) }}

{% endblock %}
