{% extends 'admin/base.html.twig' %}

{% block screenTitle %}
    <h1>
        {% if category is defined %}
            {{ screenTitle }}: <span><i>{{ category.title }}</i></span>
        {% else %}
            {{ screenTitle }}
        {% endif %}
    </h1>
{% endblock %}

{% block body %}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message|trans }}
        </div>
    {% endfor %}

    {% for message in app.flashes('alert') %}
        <div class="alert alert-danger">
            {{ message|trans }}
        </div>
    {% endfor %}

    {{ form_start(form) }}
    {{ form_widget(form) }}
    {{ form_rest(form) }}
    <button type="submit" id="saveCategorySubmitButton" class="btn btn-primary">{{ 'user.label.submit'|trans }}</button>
    {{ form_end(form) }}
    <p>
        {% if showDeleteForm is defined and showDeleteForm == true %}
            {{ include('admin/categories/_delete_form.html.twig', {category: category}, with_context = false) }}
        {% endif %}
    </p>
{% endblock %}
