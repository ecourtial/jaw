<!DOCTYPE html>
<html lang="en">
    <head>
        <title>{% block title %}{{ appName }} Admin - {{ screenTabName}} - JAW v{{ appVersion }}{% endblock %}</title>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="icon" type="image/png" sizes="16x16" href="{{ asset('assets/img/favicon.png') }}">
        {% block stylesheets %}
            <link href="{{ asset('assets/css/bootstrap/bootstrap.min.css') }}" rel="stylesheet" />
        {% endblock %}
        {% block javascripts %}
            <script src="{{ asset('assets/js/bootstrap/bootstrap.bundle.min.js') }}"></script>
            <script src="{{ asset('assets/js/jaw/functions.js') }}"></script>
        {% endblock %}
    </head>
    <body>
        {{ include('admin/general/menu.html.twig') }}
        <div id="content" class="container">
            {% block screenTitle %}<h1>{{ screenTitle }}</h1>{% endblock %}
            {% block body %}{% endblock %}
        </div>
    </body>
</html>
